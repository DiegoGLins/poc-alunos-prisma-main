{
  "openapi": "3.0.3",
  "info": {
    "title": "poc-alunos-prisma",
    "description": "A api poc-alunos-prisma é usada para cadastrar alunos e avaliações de cada um deles",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333"
    }
  ],
  "tags": [
    {
      "name": "alunos",
      "description": "Rotas para cadastro e update de alunos"
    }
  ],
  "paths": {
    "/auth": {
      "description": "Rotas para realizar autenticação",
      "post": {
        "tags": ["auth"],
        "summary": "Loga o usuário no sistema",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "type": "object",
                      "properties": {
                        "aluno": {
                          "$ref": "#/components/schemas/aluno"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Usuario não encontrado"
          }
        }
      }
    },
    "/alunos": {
      "get": {
        "tags": ["alunos"],
        "description": "Lista todos os alunos",
        "responses": {
          "200": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "ok": "boolean",
                  "$ref": "#/components/schemas/aluno"
                }
              }
            }
          }
        },
        "500": {
          "description": "Erro do servidor"
        }
      },
      "post": {
        "tags": ["alunos"],
        "description": "Cria um novo aluno",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "idade": {
                    "type": "number"
                  },
                  "password": { "type": "string" },
                  "type": { "type": "string" }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/aluno"
                }
              }
            }
          },
          "400": {
            "description": "Campos não fornecidos"
          },
          "403": {
            "description": "Tipo de aluno incorreto"
          },
          "500": {
            "description": "Erro do servidor"
          }
        }
      }
    },
    "/alunos/{id}": {
      "put": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["alunos"],
        "summary": "Edita um aluno",
        "description": "Isso só pode ser feito pelo usuário logado. Edita o nome, email e idade do aluno",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "O id do aluno a ser editado",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string" },
                  "email": { "type": "string" },
                  "idade": { "type": "number" }
                },
                "required": true
              }
            }
          }
        },
        "response": {
          "200": {
            "description": "Aluno editado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/aluno"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "aluno": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "email": { "type": "string" },
          "nome": { "type": "string" },
          "type": { "type": "string" }
        }
      },
      "token": { "type": "string" }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": {
    "bearerAuth": []
  }
}
